{
  "compilerOptions": {
    "declaration": true,
    "target": "es6",
    "baseUrl": ".",
    "module": "commonjs",
    "stripInternal": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "outDir": "lib",
    "lib": ["es2017", "es2016", "es2015", "es6", "dom", "esnext.asynciterable"],
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "~*": ["app/*"],
    },
  },
  "include": ["./src/**/*", "types"],
  "exclude": ["**/*.spec.ts"],
  "files": ["src/migrations.module.ts"]
}
